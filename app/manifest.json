{
  "name": "__MSG_appName__",
  "version": "0.1.7",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "bookmarks",
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "web_accessible_resources": [
    "images/icon-128.png", "images/clock.svg", "images/open_folder.svg", "images/restart.svg", "images/settings.svg"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "ReMarkable"
  }
}
